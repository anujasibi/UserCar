<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tripdetails">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ne"
        android:textSize="18sp"
        android:background="@color/blu"
        android:text="Save Place"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="#fff"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ten"
        android:text="Receipt"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ne"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ten"
        android:layout_marginTop="5dp"
        android:text="Oct 28,2018 AT 08:00 AM "
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:id="@+id/tenn"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/cardw"
        android:layout_below="@+id/tenn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#1AAEF4"
        app:cardElevation="20dp"

        >

        <TextView
            android:id="@+id/tennv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="â‚¹ 300"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#000"
            android:textAlignment="center" />



    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ima"
        android:layout_below="@+id/cardw"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t"
        android:layout_marginStart="20dp"
       android:layout_toEndOf="@+id/ima"
        android:layout_marginTop="70dp"
        android:text="Source"
        android:layout_below="@+id/cardw"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imaa"
        android:layout_below="@+id/ima"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/dott"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imaaa"
        android:layout_below="@+id/imaa"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/loca"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tn"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imaaa"
        android:layout_marginTop="95dp"
        android:text="Destination"
        android:layout_below="@+id/t"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/yu"
            android:text="How was your trip???? Rate Now"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_below="@+id/imaaa"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yu"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:theme="@style/RatingBar"/>

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>