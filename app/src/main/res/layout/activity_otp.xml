<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otpverify">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img"
        android:src="@drawable/otpv"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/namer"
        android:text="Enter OTP"
        android:textSize="20sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_below="@+id/img"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="We have sent you access code via SMS for mobile number verifiocation"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_below="@+id/namer"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/texty"
        android:textColor="#000"
        android:layout_marginStart="30dp"
        android:text="Enter OTP"
        android:layout_below="@+id/name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/description"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        android:layout_below="@+id/texty"
        android:background="@drawable/edit"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1AAEF4"
        android:text="Verify"
        android:layout_below="@+id/description"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:id="@+id/tt"/>





</RelativeLayout>